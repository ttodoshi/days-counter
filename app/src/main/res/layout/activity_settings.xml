<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/addCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35sp"
            android:backgroundTint="@color/white_grey"
            android:text="Создать новый счётчик" />

        <Button
            android:id="@+id/changeStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="35sp"
            android:backgroundTint="@color/white_grey"
            android:text="Выбрать дату начала" />

        <Button
            android:id="@+id/changePhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="35sp"
            android:backgroundTint="@color/white_grey"
            android:text="Изменить надпись" />

        <Button
            android:id="@+id/delLastCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:backgroundTint="@color/white_grey"
            android:text="Удалить последний счётчик" />

    </LinearLayout>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="450sp"
        android:layout_centerInParent="true"
        android:background="@color/white_grey">

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_margin="10sp"
            android:backgroundTint="@color/grey"
            android:text=" Закрыть " />

        <Button
            android:id="@+id/dateFromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="75sp"
            android:backgroundTint="@color/grey"
            android:text="Ввести дату" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="10sp"
            android:backgroundTint="@color/grey"
            android:text="Сохранить" />

    </CalendarView>

</RelativeLayout>